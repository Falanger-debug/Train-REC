<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Podsumowanie Zakupu</title>

    <!--Bootstrap CSS-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!--Custom Styling-->
    <link rel="stylesheet" href="/mainStyles.css">
    <link rel="stylesheet" href="/headerStyles.css">
    <!--FontAwesome-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body>
<%- include('partials/header') %>

<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header text-center bg-primary text-white">
            <h3>Podsumowanie Zakupu</h3>
        </div>
        <div class="card-body">
            <div id="summaryContent" class="text-dark"></div>
        </div>
        <div class="card-footer text-center">
            <button class="btn btn-outline-primary mt-2" onclick="window.history.back()">Powrót do strony zakupu</button>
        </div>
    </div>
</div>

<!-- Bootstrap JS Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-5Rqljz3Ea1Q/i9jsO+TTODpqCvHp5+Y4jHqq1cGzpw5E08F5flLRqK0LJ9VfZFU3" crossorigin="anonymous"></script>

<script>
    // Funkcja do pobierania parametrów z URL
    function getUrlParams() {
        const urlParams = new URLSearchParams(window.location.search);
        return {
            class: urlParams.get('class'),
            discount: urlParams.get('discount'),
            seat: urlParams.get('seat'),
            price: urlParams.get('price')
        };
    }

    // Wyświetlenie podsumowania na stronie
    function displaySummary() {
        const { class: selectedClass, discount, seat, price } = getUrlParams();
        const seatText = seat === "wybrane" ? "Wpisz numer ręcznie" : seat;

        const summaryMessage = `
                <h5>Klasa: <span class="text-primary">${selectedClass === "1" ? "Klasa 1" : selectedClass === "2" ? "Klasa 2" : "Nie wybrano"}</span></h5>
                <h5>Ulga: <span class="text-primary">${discount === "student" ? "Ulga studencka (51%)" :
            discount === "school" ? "Ulga szkolna (37%)" :
                discount === "senior" ? "Ulga dla seniorów (30%)" :
                    discount === "disabled" ? "Ulga dla osób niepełnosprawnych (78%)" : "Brak ulgi"}</span></h5>
                <h5>Preferencje miejsca: <span class="text-primary">${seatText}</span></h5>
                <h5>Cena: <span class="text-success">${price} zł</span></h5>
            `;

        document.getElementById("summaryContent").innerHTML = summaryMessage;
    }

    // Wywołanie funkcji po załadowaniu strony
    window.addEventListener('load', displaySummary);
</script>
</body>
</html>
