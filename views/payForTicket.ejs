<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Plan your Journey</title>

    <!--Bootstrap CSS-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!--Custom Styling-->
    <link rel="stylesheet" href="/buyTicketStyles.css">
    <link rel="stylesheet" href="/mainStyles.css">
    <link rel="stylesheet" href="/headerStyles.css">
    <link rel="stylesheet" href="/payForTicketStyles.css">

    <!--FontAwesome-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">


</head>
<body>
<%- include('partials/header') %>

<div class="container mt-5">

    <div class="card shadow-lg border-light payment-panel">


        <h2 class="text-center mt-2">Wybierz metodę płatności</h2>

        <div class="text-center my-4">
            <h4 class="fw-bold">
                <i class="fas fa-ticket-alt text-success me-2"></i>
                Do zapłaty:
                <span id="ticketPrice" class="text-success">0.00</span>
            </h4>
        </div>

        <div class="row mt-4">
            <div class="col-1 col-sm-0"></div>

            <div class="col-md-4 text-center">
                <div class="card payment-method" id="blikMethod">
                    <div class="card-body">
                        <i class="fas fa-mobile-alt fa-3x"></i>
                        <h5 class="card-title mt-2">Płatność BLIK</h5>
                    </div>
                </div>
            </div>

            <div class="col-2"></div>

            <div class="col-md-4 text-center">
                <div class="card payment-method" id="walletMethod">
                    <div class="card-body">
                        <i class="fas fa-wallet fa-3x"></i>
                        <h5 class="card-title mt-2">Płatność z Portfela</h5>
                    </div>
                </div>
            </div>
            <div class="col-1 col-sm-0"></div>
        </div>


        <!-- Formularz BLIK -->
        <div class="mt-4 payment-form text-center" id="blikForm">
            <h4>Podaj kod BLIK</h4>
            <div class="row justify-content-center">
                <div class="col-6 col-md-4">
                    <input type="text" id="blikCode" class="form-control text-center" maxlength="6"
                           placeholder="Wprowadź 6-cyfrowy kod BLIK">
                </div>
            </div>
            <button class="btn btn-success mt-3" id="confirmBlikPayment">Potwierdź płatność BLIK</button>
        </div>


        <!-- Formularz Portfela -->
        <div class="mt-4 payment-form text-center" id="walletForm">
            <h4>Saldo Portfela: <span id="walletBalance"><%= wallet %></span> zł</h4>
            <div class="row justify-content-center">
                <div class="col-6 col-md-4">
                    <button class="btn btn-success w-100 mt-3" id="confirmWalletPayment">Potwierdź płatność z Portfela
                    </button>
                </div>
            </div>
        </div>


        <!-- Modal do wyświetlania komunikatów -->
        <div class="modal fade" id="paymentModal" tabindex="-1" aria-labelledby="paymentModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="paymentModalLabel">Status płatności</h5>
                    </div>
                    <div class="modal-body" id="paymentModalMessage">
                        <!-- Komunikat o statusie płatności -->
                    </div>
                    <div id="countdownMessage" class="mt-2 text-secondary"></div>
                    <div class="modal-footer">
                        <button id="closeModalButton" type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            Przejdź do biletów</button>
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>


<%- include('partials/footer') %>
<!--Bootstrap JS-->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="/scripts/toggleDetails.js"></script>
<script src="/scripts/chosenSeat.js"></script>
<script src="/scripts/priceClass.js"></script>
<script src="/scripts/getSummary.js"></script>
<script src="/scripts/handleSeatSelection.js"></script>
<script src="/scripts/handleDiscountChange.js"></script>
<script src="/scripts/paymentSilumation.js"></script>


</body>
</html>